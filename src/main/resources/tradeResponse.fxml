<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.catan.controller.TradeResponseController"
            prefWidth="350" prefHeight="180">
    <children>
        <Label fx:id="offerLabel" layoutX="20" layoutY="20" wrapText="true" prefWidth="310"/>
        <Button text="Annehmen" layoutX="50" layoutY="100" onAction="#acceptTrade"/>
        <Button text="Ablehnen" layoutX="180" layoutY="100" onAction="#declineTrade"/>
    </children>
</AnchorPane>