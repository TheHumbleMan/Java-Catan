<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.catan.controller.popUpController"
            prefWidth="400" prefHeight="320">

    <children>
        <VBox spacing="10" layoutX="20" layoutY="20">
            <HBox spacing="10">
                <Label text="Spieler wählen:"/>
                <ComboBox fx:id="playerComboBox" prefWidth="140"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ich gebe:"/>
                <ComboBox fx:id="giveResourceComboBox" prefWidth="140"/>
                <Spinner fx:id="giveAmountSpinner" prefWidth="50"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ich möchte:"/>
                <ComboBox fx:id="receiveResourceComboBox" prefWidth="140"/>
                <Spinner fx:id="receiveAmountSpinner" prefWidth="50"/>
            </HBox>

            <Button text="Handel anbieten" onAction="#handleTradeConfirm" prefWidth="150"/>
        </VBox>
    </children>
</AnchorPane>
